---
import EventCard from "./EventCard.astro";
---

<section id="events" class="flex flex-col px-4 lg:px-24 py-12">
    <div class="flex flex-col gap-2">
        <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 uppercase">Póximos eventos</h2>
        <blockquote class="text-xl italic font-semibold text-gray-900">
            <img src="/icons/quote.svg" alt="Quote icon" class="w-4">
            <p>No te pierdas los eventos que tenemos preparados</p>
        </blockquote>
    </div>
    <div class="overflow-x-hidden">
        <div class="carousel-track whitespace-nowrap gap-4">
            <EventCard image="https://res.cloudinary.com/dlwhh53by/image/upload/v1706248658/rafa/tqa8umgogrlemusg44ak.png" date="4 de febrero AHS - Holguin" title="Taller presencial bienestar emocional" />
