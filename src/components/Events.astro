            <EventCard image="https://res.cloudinary.com/dlwhh53by/image/upload/v1706248658/rafa/tqa8umgogrlemusg44ak.png" date="4 de febrero AHS - Holguin" title="Taller presencial bienestar emocional" />
            <EventCard image="https://res.cloudinary.com/dlwhh53by/image/upload/v1706248658/rafa/tqa8umgogrlemusg44ak.png" date="4 de febrero AHS - Holguin" title="Taller presencial bienestar emocional" />
            <EventCard image="https://res.cloudinary.com/dlwhh53by/image/upload/v1706248658/rafa/tqa8umgogrlemusg44ak.png" date="4 de febrero AHS - Holguin" title="Taller presencial bienestar emocional" />
            <EventCard image="https://res.cloudinary.com/dlwhh53by/image/upload/v1706248658/rafa/tqa8umgogrlemusg44ak.png" date="4 de febrero AHS - Holguin" title="Taller presencial bienestar emocional" />           
        </div>
    </div>
</section>

<style>
    .carousel-track {
        display: flex;
        animation: scroll 25s linear infinite;
    }

    @keyframes scroll {
        0% {
            transform: translateX(-15%);
        }
        100% {
            transform: translateX(-110%); /* Ajusta este valor según el número de slides */
        }
    }
    
    @media (max-width: 1040px) {
        .carousel-slide {
            width: 50%;
            flex: 0 0 auto;
            margin: 16px;
        }
    }
    
    @media (max-width: 720px) {
        .carousel-slide {
            width: 80%;
            flex: 0 0 auto;
            margin: 16px;
        }
        .carousel-track {
            display: flex;
            animation: scroll 20s linear infinite;
        }
        @keyframes scroll {
            0% {
                transform: translateX(0%);
            }
            100% {
                transform: translateX(-500%); /* Ajusta este valor según el número de slides */
            }
        }
    }


</style>